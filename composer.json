{
    "name": "wappo/laravel-schema-api",
    "description": "This is a package that automatically exposes the DB schema in an api",
    "keywords": [
        "WAPPO",
        "laravel",
        "laravel-schema-api"
    ],
    "homepage": "https://github.com/wappo/laravel-schema-api",
    "license": "MIT",
    "authors": [
        {
            "name": "Johan Östling",
            "email": "joos@wappo.se",
            "role": "Developer"
        },
        {
            "name": "Patrik Malmström",
            "email": "pama@wappo.se",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2||^8.3||^8.4",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^10.0||^11.0||^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.1.1||^7.10.0",
        "orchestra/testbench": "^10.0.0||^9.0.0||^8.22.0",
        "pestphp/pest": "*",
        "pestphp/pest-plugin-arch": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Wappo\\LaravelSchemaApi\\": "src/",
            "Wappo\\LaravelSchemaApi\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Wappo\\LaravelSchemaApi\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage tests/Tests",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Wappo\\LaravelSchemaApi\\SchemaApiServiceProvider"
            ]
        }
    }
}
